<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route method="POST" url="/V1/mpgs/hosted/session/create">
        <service class="OnTap\MasterCard\Api\Hosted\SessionManagementInterface" method="createNewPaymentSession"/>
        <resources>
            <resource ref="self" />
        </resources>
        <data>
            <parameter name="cartId" force="true">%cart_id%</parameter>
        </data>
    </route>
    <route method="POST" url="/V1/mpgs/hosted/session/:cartId/create">
        <service class="OnTap\MasterCard\Api\Hosted\SessionManagementInterface" method="createNewGuestPaymentSession"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>

    <route method="POST" url="/V1/mpgs/session/create">
        <service class="OnTap\MasterCard\Api\SessionManagementInterface" method="createNewPaymentSession"/>
        <resources>
            <resource ref="self" />
        </resources>
        <data>
            <parameter name="cartId" force="true">%cart_id%</parameter>
        </data>
    </route>
    <route method="POST" url="/V1/mpgs/session/:cartId/create">
        <service class="OnTap\MasterCard\Api\SessionManagementInterface" method="createNewGuestPaymentSession"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>

    <route method="POST" url="/V1/mpgs/session/wallet">
        <service class="OnTap\MasterCard\Api\SessionManagementInterface" method="openWallet"/>
        <resources>
            <resource ref="self" />
        </resources>
        <data>
            <parameter name="cartId" force="true">%cart_id%</parameter>
        </data>
    </route>
    <route method="POST" url="/V1/mpgs/session/:cartId/wallet">
        <service class="OnTap\MasterCard\Api\SessionManagementInterface" method="openWalletGuest"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>

    <route method="POST" url="/V1/mpgs/wallet/amex/update-session">
        <service class="OnTap\MasterCard\Api\WalletPaymentInterface" method="updateSessionFromAmexWallet"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>

    <route method="POST" url="/V1/mpgs/wallet/visa/update-session">
        <service class="OnTap\MasterCard\Api\WalletPaymentInterface" method="updateSessionFromVisaWallet"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>

    <route url="/V1/mpgs/wallet/:cartId/set-payment-information" method="POST">
        <service class="OnTap\MasterCard\Api\WalletPaymentInterface" method="saveGuestPaymentInformation"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
    <route url="/V1/mpgs/wallet/set-payment-information" method="POST">
        <service class="OnTap\MasterCard\Api\WalletPaymentInterface" method="savePaymentInformation"/>
        <resources>
            <resource ref="self" />
        </resources>
        <data>
            <parameter name="cartId" force="true">%cart_id%</parameter>
        </data>
    </route>
</routes>
