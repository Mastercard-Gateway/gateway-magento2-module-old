<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <payment>
            <tns_direct>
                <active>0</active>
                <title>Credit or Debit Card</title>
                <model>TnsDirectFacade</model>
                <payment_action>authorize</payment_action>

                <api_version>32</api_version>

                <api_url>https://eu-gateway.mastercard.com/api/rest/</api_url>
                <api_test_url>https://test-gateway.mastercard.com/api/rest/</api_test_url>

                <cctypes>VI,MC,MI</cctypes>
                <date_delim>-</date_delim>
                <cc_year_length>4</cc_year_length>
                <ccfields>card_cvn,card_expiry_date,card_number</ccfields>
                <allowspecific>0</allowspecific>
                <debug>0</debug>
                <test>0</test>
                <three_d_secure>0</three_d_secure>

                <!--<can_initialize>1</can_initialize>-->
                <can_authorize>1</can_authorize>
                <can_capture>1</can_capture>
                <can_capture_partial>1</can_capture_partial>
                <can_void>1</can_void>
                <can_refund>1</can_refund>
                <can_deny_payment>1</can_deny_payment>
                <can_accept_payment>1</can_accept_payment>
                <can_review_payment>1</can_review_payment>
                <can_use_internal>1</can_use_internal>
                <can_use_checkout>1</can_use_checkout>
                <is_gateway>1</is_gateway>

                <paymentInfoKeys>gateway_code,txn_result,card_scheme,card_number,card_expiry_date,cvv_validation</paymentInfoKeys>
                <!--<privateInfoKeys></privateInfoKeys>-->
            </tns_direct>
            <tns_hosted>
                <active>0</active>
                <title>Hosted Checkout</title>
                <model>TnsHostedFacade</model>
                <payment_action>authorize</payment_action>

                <api_version>32</api_version>
                <api_url>https://eu-gateway.mastercard.com/api/rest/</api_url>
                <api_test_url>https://test-gateway.mastercard.com/api/rest/</api_test_url>

                <component_url>https://eu-gateway.mastercard.com/checkout/version/32/checkout.js</component_url>
                <component_test_url>https://test-gateway.mastercard.com/checkout/version/32/checkout.js</component_test_url>

                <debug>0</debug>
                <test>0</test>
                <allowspecific>0</allowspecific>
                <can_initialize>0</can_initialize>
                <can_use_checkout>1</can_use_checkout>
                <can_use_internal>0</can_use_internal>

                <can_refund>1</can_refund>
                <can_void>1</can_void>
                <can_order>0</can_order>
                <can_authorize>1</can_authorize>
                <can_capture>1</can_capture>
                <can_capture_partial>1</can_capture_partial>

                <paymentInfoKeys>gateway_code,txn_result,card_scheme,card_number,card_expiry_date,cvv_validation</paymentInfoKeys>
                <!--<privateInfoKeys></privateInfoKeys>-->
            </tns_hosted>
            <tns_hpf>
                <active>0</active>
                <title>Hosted Payment Session</title>
                <model>TnsHpfFacade</model>
                <payment_action>authorize</payment_action>

                <cctypes>VI,MC,MI</cctypes>
                <date_delim>-</date_delim>
                <cc_year_length>4</cc_year_length>
                <ccfields>card_cvn,card_expiry_date,card_number</ccfields>

                <debug>0</debug>
                <test>0</test>
                <allowspecific>0</allowspecific>
                <can_initialize>0</can_initialize>
                <can_use_checkout>1</can_use_checkout>
                <can_use_internal>0</can_use_internal>

                <can_refund>1</can_refund>
                <can_void>1</can_void>
                <can_order>0</can_order>
                <can_authorize>1</can_authorize>
                <can_capture>1</can_capture>
                <can_capture_partial>1</can_capture_partial>

                <paymentInfoKeys>gateway_code,txn_result,card_scheme,card_number,card_expiry_date,cvv_validation</paymentInfoKeys>
                <!--<privateInfoKeys></privateInfoKeys>-->
            </tns_hpf>
        </payment>
    </default>
</config>
